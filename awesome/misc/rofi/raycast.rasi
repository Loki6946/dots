	str: "󰌑";
	expand: false;
	text-color: @fg0;
	font: "Ubuntu Nerd Font 16px";
	vertical-align: 0.5;
	margin: 10px 0;
	padding: 0 8px;
	border-radius: 4px;
  background-color: rgba(255, 255, 255, 0.1);
}

