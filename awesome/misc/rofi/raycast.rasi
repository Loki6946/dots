footer {
	children: [spacer, keys-info];
	expand:false;
	orientation: horizontal;
	padding: 2px 10px;
	background-color: @bg;
  border-color: @border-color;
	border: 1px 0 0 0;
}

textbox-1 {
  expand: false;
  str: "󰣇";
	background-color: transparent;	
	text-color: rgba(255, 255, 255, 0.1);
	font: "Ubuntu Nerd Font 34px";
	vertical-align: 0.5;
}

textbox {
  expand: false;
  str: "Application";
	background-color: transparent;
	text-color: @fg0;
	font: "SF Pro Display 12";
	vertical-align: 0.5;
}

inputbar {
	children: [entry];
	background-color: transparent;
	border-color: @border-color;
}

entry {
	font: "SF Pro Display 14";
  placeholder: "Search for apps";
  placeholder-color: @fg2;
  padding: 18px 14px; 
  text-color: @fg0;
  border-color: @border-color;
	border: 0 0 1px 0;
  background-color: transparent;
}

prompt {
  text-color: #FFFFFF;
}

listview {
  padding: 6px;
  lines: 7;
	spacing: 5px;
  background-color: transparent; 
}

element {
  padding: 10px;
	border-radius: 8px;
	border: 0;
  background-color: transparent; 
  text-color: blue;
	spacing: 10px;
	children: [group, textbox];
}


group {
  background-color: transparent;
  orientation: horizontal;
	spacing: 12px;
	children: [element-icon, element-text];
}

element hover {
	background-color: transparent;
}

element-icon {
  size: 25px;
	background-color: transparent;
}


element-text {
	font: "SF Pro Display 11";
	vertical-align: 0.5;
	text-color: @fg0;
	background-color: transparent;
}

element selected {
  background-color:  @bg-hover;
}
